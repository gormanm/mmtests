. $SHELLPACK_INCLUDE/include-sizes.sh
get_numa_details

export MMTESTS="piobuild"

# List of monitors
export RUN_MONITOR=no
export MONITORS_ALWAYS=
export MONITORS_GZIP=
export MONITORS_WITH_LATENCY=
export MONITOR_UPDATE_FREQUENCY=10

# PNETCDF dependency
export PNETCDF_OPENMPI_VERSION=openmpi4
export PNETCDF_MPI_PATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$PNETCDF_OPENMPI_VERSION/bin
export PNETCDF_MPI_LIBPATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$PNETCDF_OPENMPI_VERSION/$MMTESTS_LIBDIR

# HDF5 dependency
export HDF5_OPENMPI_VERSION=openmpi4
export HDF5_MPI_PATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$HDF5_OPENMPI_VERSION/bin
export HDF5_MPI_LIBPATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$HDF5_OPENMPI_VERSION/$MMTESTS_LIBDIR

# NETCDFC dependency
export NETCDFC_OPENMPI_VERSION=openmpi4
export NETCDFC_MPI_PATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$NETCDFC_OPENMPI_VERSION/bin
export NETCDFC_MPI_LIBPATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$NETCDFC_OPENMPI_VERSION/$MMTESTS_LIBDIR

# NETCDFFC dependency
export NETCDFFC_OPENMPI_VERSION=openmpi4
export NETCDFFC_MPI_PATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$NETCDFFC_OPENMPI_VERSION/bin
export NETCDFFC_MPI_LIBPATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$NETCDFFC_OPENMPI_VERSION/$MMTESTS_LIBDIR

# PIO dependency
export PIO_OPENMPI_VERSION=openmpi4
export PIO_MPI_PATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$PIO_OPENMPI_VERSION/bin
export PIO_MPI_LIBPATH=/usr/$MMTESTS_LIBDIR/mpi/gcc/$PIO_OPENMPI_VERSION/$MMTESTS_LIBDIR
