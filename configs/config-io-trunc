# List of monitors
export RUN_MONITOR=yes
export MONITORS_ALWAYS=
#export MONITORS_TRACER="perf-event-stat"
export MONITORS_GZIP="proc-vmstat mpstat"
export MONITORS_WITH_LATENCY="vmstat iostat"
export MONITOR_UPDATE_FREQUENCY=2

# Trunc
export TRUNC_ITERATIONS=30
export TRUNC_FILESIZE=$((1048576*4*1024))
export TRUNC_NR_FILES=$((MEMTOTAL_BYTES*3/2/TRUNC_FILESIZE+1))
